<div class="container">
	<p id="notice"><%= notice %></p>

	<h3 class="text-center"><%= @article.title %></h3>
	<p class="text-center">Category: <%= @article.category %></p>
	<p class="grey-background text-white article-content-padding"><%= @article.content %></p>

	<% if logged_in?(:editor) %>
		<%= link_to 'Edit', edit_article_path(@article) %> |
	<% end %>
	<%= link_to 'Back To Articles', articles_path, class: 'btn btn-primary float-right' %>
</div>